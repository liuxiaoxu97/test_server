<configuration>
    <!-- 定义日志文件的存储地址 -->
    <springProperty scope="context"
                    name="LOG_HOME"
                    source="logging.file.path"
                    defaultValue="logs"/>

    <springProperty scope="context"
                    name="APPLICATION_NAME"
                    source="spring.application.name"
                    defaultValue="application"/>

    <!-- 控制台输出 -->
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>
                %d{yyyy-MM-dd HH:mm:ss.SSS} [%X{traceId}] %highlight(%-5level) %magenta(${PID:-}) --- [%15.15thread] %cyan(%logger{20}) %blue(%5.5line) : %msg%n
            </pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>

    <!-- 按照每天生成日志文件 - 兼容 Logback 1.5.18 -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_HOME}/${APPLICATION_NAME}.log</file>
        <immediateFlush>true</immediateFlush>
        <encoder>
            <pattern>
                %d{yyyy-MM-dd HH:mm:ss.SSS} [%X{traceId}] %-5level ${PID:-} --- [%15.15thread] %logger{20} %5line : %msg%n
            </pattern>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_HOME}/${APPLICATION_NAME}.%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <maxFileSize>50MB</maxFileSize>
            <maxHistory>30</maxHistory>
            <totalSizeCap>5GB</totalSizeCap>
        </rollingPolicy>
    </appender>

    <!-- 环境相关配置 -->
    <springProfile name="dev,test">
        <root level="DEBUG">
            <appender-ref ref="STDOUT"/>
            <appender-ref ref="FILE"/>
        </root>
        <!-- 开发环境启用SQL日志 -->
        <logger name="org.hibernate.SQL" level="DEBUG" additivity="false">
            <appender-ref ref="STDOUT"/>
        </logger>
    </springProfile>

    <springProfile name="prod">
        <root level="INFO">
            <appender-ref ref="FILE"/>
        </root>
        <!-- 生产环境禁用控制台日志 -->
        <logger name="ROOT" level="INFO" additivity="false">
            <appender-ref ref="FILE"/>
        </logger>
    </springProfile>
</configuration>